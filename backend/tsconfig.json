{
  "compilerOptions": {
    "target": "es2016",     
    "module": "commonjs",                               
    "rootDir": "./src",                                 
    "outDir": "./dist",         
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
        "*": ["node_modules/*", "src/types/*"]
    }                            
  },
  "include": ["./src/**/*"]
}
